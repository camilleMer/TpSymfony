<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Step" table="step">
    <indexes>
      <index name="fk_step_scale_idx" columns="scale_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false"/>
    <field name="shortname" type="string" column="shortname" length="10" nullable="true"/>
    <field name="content" type="text" column="content" length="65535" nullable="true"/>
    <field name="position" type="integer" column="position" nullable="false"/>
    <many-to-one field="scale" target-entity="Scale">
      <join-columns>
        <join-column name="scale_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
