<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Teacher" table="teacher">
    <indexes>
      <index name="fk_teacher_user1_idx" columns="user_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <many-to-one field="user" target-entity="User">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="discipline" target-entity="Discipline" mapped-by="teacher"/>
    <many-to-many field="class" target-entity="Class" inversed-by="teacher">
      <join-table name="class_teacher">
        <join-columns>
          <join-column name="teacher_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="class_id" referenced-column-name="id"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
