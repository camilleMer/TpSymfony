<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Assessment" table="assessment">
    <indexes>
      <index name="fk_assessment_period1_idx" columns="period_id"/>
      <index name="fk_assessment_discipline1_idx" columns="discipline_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="45" nullable="true"/>
    <field name="content" type="string" column="content" length="45" nullable="true"/>
    <field name="coefficient" type="integer" column="coefficient" nullable="true"/>
    <field name="assessmentDate" type="string" column="assessment_date" length="45" nullable="true"/>
    <field name="created" type="datetime" column="created" nullable="true"/>
    <field name="updated" type="datetime" column="updated" nullable="true"/>
    <many-to-one field="period" target-entity="Period">
      <join-columns>
        <join-column name="period_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="discipline" target-entity="Discipline">
      <join-columns>
        <join-column name="discipline_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="class" target-entity="Class" mapped-by="assessment"/>
  </entity>
</doctrine-mapping>
